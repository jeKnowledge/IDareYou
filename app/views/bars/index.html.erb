<h1>New Bar</h1>

<%= form_for :bar do |f| %>
	<div><%= f.label :name %><br />
	<%= f.text_field :name %></div>
	<div><%= f.label :email %><br />
	<%= f.email_field :email %></div>
	<div><%= f.label :description %><br />
	<%= f.text_area :description %></div>
	<div><%= f.label :lat %><br />
	<%= f.select :lat, [[1, 1]] %></div>
	<div><%= f.label :long %><br />
	<%= f.select :long, [[1, 1]] %></div>
	<div><%= f.label :type %><br />
	<%= f.select :type, [['Pub', 'pub'], ['Discoteca', 'discoteca'], ['CafÃ©', 'cafe']] %></div>

	<div><br /><%= f.submit %></div>
<% end %>